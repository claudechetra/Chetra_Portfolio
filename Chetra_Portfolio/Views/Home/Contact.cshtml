
@model Chetra_Portfolio.Models.Contact
@{
    ViewData["Title"] = "Contact";
}

<!-- Bootstrap Icons & AOS (ensure these are in your layout) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({ duration: 800, once: true });
</script>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    a {
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="container py-5">
    <h2 class="text-center text-primary mb-5" data-aos="fade-down">Get in Touch</h2>

    <div class="row justify-content-center">
        <div class="col-md-8" data-aos="zoom-in">
            <div class="card shadow-sm border-0 p-4">
                <ul class="list-unstyled mb-0 fs-5">
                    <li class="mb-3">
                        <i class="bi bi-telephone-fill text-primary me-2"></i> @Model.Phone
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-envelope-fill text-danger me-2"></i>
                        <a href="mailto:@Model.Email">@Model.Email</a>
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-facebook text-primary me-2"></i>
                        <a href="@Model.Facebook" target="_blank">Facebook</a>
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-linkedin text-primary me-2"></i>
                        <a href="@Model.LinkedIn" target="_blank">LinkedIn</a>
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-instagram text-danger me-2"></i>
                        <a href="@Model.Instagram" target="_blank">Instagram</a>
                    </li>
                    <li>
                        <i class="bi bi-github text-dark me-2"></i>
                        <a href="@Model.GitHub" target="_blank">GitHub</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
