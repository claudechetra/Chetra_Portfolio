@model List<Chetra_Portfolio.Models.Education>
@{
    ViewData["Title"] = "Education";
}

<!-- Include Bootstrap Icons & AOS (only once in _Layout.cshtml ideally) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>AOS.init({ duration: 800, once: true });</script>

<style>
    .edu-card {
        transition: 0.3s ease;
    }

        .edu-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

    .school-logo {
        height: 50px;
        object-fit: contain;
        margin-bottom: 10px;
    }

    .badge-custom {
        background-color: #eaf2ff;
        color: #0d6efd;
        margin: 4px;
        font-size: 0.85rem;
        display: inline-block;
        padding: 0.5em 0.75em;
        border-radius: 10px;
    }
</style>

<div class="container py-5">
    <h2 class="text-center text-primary mb-5" data-aos="fade-down">Education</h2>

    <div class="row g-4">
        @foreach (var edu in Model)
        {
            <div class="col-md-6 col-lg-4" data-aos="fade-up">
                <div class="card edu-card border-0 shadow-sm p-4 h-100 text-center">
                    <img src="@edu.SchoolLogo" alt="@edu.School" class="school-logo mx-auto" />
                    <div class="card-body">
                        <p class="text-muted"><i class="bi bi-building"></i> @edu.School</p>
                        <p class="text-muted"><i class="bi bi-calendar"></i> @edu.Year</p>

                        @if (edu.Achievements?.Count > 0)
                        {
                            <h6 class="mt-3 text-secondary">Achievements</h6>
                            <div class="d-flex flex-wrap justify-content-center">
                                @foreach (var ach in edu.Achievements)
                                {
                                    <span class="badge-custom">
                                        <i class="bi bi-award"></i> @ach.Title
                                    </span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
